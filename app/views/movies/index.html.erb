<div class="container mx-auto col-sm-6 p-3 pt-3 bg-light m-3">
  <h1 class="text-center text-dark shadow-lg p-5 rounded">Binged!</h1>
  <hr class="font-weight-bold text-secondary" />

 
    <% @movies.each do |movie| %>
      <% if movie.user == current_user || !current_user %>
        <p class="py-1 shadow-lg px-2 rounded">
          <%= link_to movie.name, movie, class: " fw-semibold text-dark" %>
        </p>
      <% end %>
    <% end %>
 
    <div class="text-center">
      <% if current_user %>
        <%= link_to "New Movie", new_movie_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
</div>

